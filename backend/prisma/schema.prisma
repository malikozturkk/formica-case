generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             Int     @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String  @unique
  password       String
  refreshToken   String?

  @@map("users")
}

model Travels {
  id              Int         @id @default(autoincrement())
  departure       String
  arrival         String
  departureTime   DateTime
  arrivalTime     DateTime
  ticketLeft      Int
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("travels")
}

enum TicketStatus {
  ACQUIRED
  CHECKEDIN
  USED
  EXPIRED
}

model Tickets {
  id              Int                 @id @default(autoincrement())
  ticketNumber    Int
  status          TicketStatus
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  @@map("tickets")
}